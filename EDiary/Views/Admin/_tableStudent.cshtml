@using EDiary.Models
@using EDiary.ViewModels
@model TableStudentModel
<div>
    <div class="col-12">
        <div class="row mb-4">
            <input id="findInput" type="text" class="form-control" placeholder="Поиск по учащимся" />
        </div>
    </div>
    <table class="table table-bordered overflow-auto">
        <thead class="thead-light">
            <tr>
                <th scope="col">Логин</th>
                <th scope="col">Фамилия</th>
                <th scope="col">Имя</th>
                <th scope="col">Отчество</th>
                <th scope="col">Email</th>
                <th scope="col">Группа</th>
                <th scope="col">Действия</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var userStudentGroup in Model.students)
            {
               <tr>
                   <td>@userStudentGroup.studentLogin</td>
                   <td>@userStudentGroup.studentSurname</td>
                   <td>@userStudentGroup.studentName</td>
                   <td>@userStudentGroup.studentLastname</td>
                   <td>@userStudentGroup.studentEmail</td>
                   <td>@userStudentGroup.groupName</td>
                   <td>
                       <a class="btnUpdate" data-object="user"><img src="/css/source/iconUpdate.png"/></a>
                       <a class="btnRemove"><img src="~/css/source/iconDelete.png"/></a>
                   </td>
               </tr>
            }
    </tbody>
    </table>
</div> 
<div id="сonfirmModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Удалить запись</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="DeleteStudent" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="col-12">
                        <div class="row mb-2">
                            <input asp-for="studentLogin" id="userlogin" type="hidden" value=""/>
                            <p id="confirmText">Вы действительно хотите удалить запись</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                    <input type="submit" class="btn btn-primary" value="Удалить" />
                </div>
            </form>
        </div>
    </div>
</div>

<div id="updateModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Обновить запись</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="UpdateStudent" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="col-12">
                        <div class="row mb-2">
                            <input asp-for="studentLogin" class="form-control" id="userLogin" type="text" disabled value=""/>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="row mb-2">
                            <input asp-for="studentSurname" class="form-control" id="userSurname" type="text" required value=""/>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="row mb-2">
                            <input asp-for="studentName" class="form-control" id="userName" type="text" required value=""/>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="row mb-2">
                            <input asp-for="studentLastname" class="form-control" id="userLastname" type="text" required value=""/>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="row mb-2">
                            <input asp-for="studentEmail" class="form-control" id="userEmail" type="text" required value=""/>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="row mb-2">
                            <input asp-for="studentGroup" class="form-control" id="userGroup" type="text" required list="groupsSt"/>
                            <datalist id="groupsSt">
                                @foreach (var group in Model.groups)
                                {
                                    <option value="@group.groupName"></option>
                                }
                            </datalist>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                    <input type="submit" class="btn btn-primary" value="Обновить" />
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/partialScript.js"></script>