@using EDiary.Models
@using EDiary.ViewModels
@model IEnumerable<AspTeacherSubjectGroup>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Предмет</th>
            <th scope="col">Преподаватели</th>
            <th scope="col">Группа</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacherGroupSubject in Model)
        {
            <tr>
                <td>@teacherGroupSubject.tsubjectId</td>
                <td>@teacherGroupSubject.subjectName</td>
                <td>@teacherGroupSubject.teacherSurname @teacherGroupSubject.teacherName.Substring(0,1). @teacherGroupSubject.teacherLastname.Substring(0,1).</td>
                <td>@teacherGroupSubject.groups</td>
            </tr>
        }
    </tbody>
</table>