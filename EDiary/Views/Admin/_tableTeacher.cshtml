@using EDiary.Models
@using EDiary.ViewModels
@model TableTeacherModel
<div class="col-12">
    <div class="row">
        <div class="col-12">
            <div class="row mb-4">
                <input id="findInput" type="text" class="form-control" placeholder="Поиск по преподавателям" />
            </div>
        </div>
        <table class="table table-bordered overflow-auto table-responsive">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Логин</th>
                    <th scope="col">Фамилия</th>
                    <th scope="col">Имя</th>
                    <th scope="col">Отчество</th>
                    <th scope="col">Email</th>
                    <th scope="col">Предметы</th>
                    <th scope="col">Действия</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var teacherUserSubject in Model.teachers)
                {
                    <tr>
                        <td>@teacherUserSubject.teacherLogin</td>
                        <td>@teacherUserSubject.teacherSurname</td>
                        <td>@teacherUserSubject.teacherName</td>
                        <td>@teacherUserSubject.teacherLastname</td>
                        <td>@teacherUserSubject.teacherEmail</td>
                        <td>@teacherUserSubject.subjectName</td>
                        <td>
                            <a class="btnUpdate" data-object="user"><img src="/css/source/iconUpdate.png"/></a>
                            <a class="btnRemove"><img src="~/css/source/iconDelete.png"/></a>
                        </td>
                   </tr>
                }
            </tbody>
        </table>
    </div> 
<div id="сonfirmModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Удалить запись</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="DeleteTeacher" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="col-12">
                        <div class="row mb-2">
                            <input asp-for="teacherLogin" id="userLog" type="hidden" value=""/>
                            <p id="confirmText">Вы действительно хотите удалить запись</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                    <input type="submit" class="btn btn-primary" value="Удалить" />
                </div>
            </form>
        </div>
    </div>
</div>

<div id="updateModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Обновить запись</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="UpdateTeacher" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="col-12">
                        <div class="row mb-2">
                            <input asp-for="teacherLogin" class="form-control" id="userLogin" type="text" readonly/>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="row mb-2">
                            <input asp-for="teacherSurname" class="form-control" id="userSurname" type="text" required value=""/>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="row mb-2">
                            <input asp-for="teacherName" class="form-control" id="userName" type="text" required value=""/>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="row mb-2">
                            <input asp-for="teacherLastname" class="form-control" id="userLastname" type="text" required value=""/>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="row mb-2">
                            <input asp-for="teacherEmail" class="form-control" id="userEmail" type="email" required value=""/>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                    <input type="submit" class="btn btn-primary" value="Обновить" />
                </div>
            </form>
        </div>
    </div>
</div>
</div>

<script src="~/js/partialScript.js"></script>