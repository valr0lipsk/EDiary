@using EDiary.Models
@using EDiary.ViewModels
@model AspUserTeacherSubject
<table class="table table-hover table-bordered">
    @*Таблица преподов*@
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Логин</th>
            <th scope="col">Фамилия</th>
            <th scope="col">Имя</th>
            <th scope="col">Отчество</th>
            <th scope="col">Предметы</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacherUserSubject in Model.Users.Zip(Model.Teachers.Zip(Model.Subjects.Zip(Model.AspUsers))))
            {
               <tr>
                  <td>@teacherUserSubject.Second.First.teacherId</td>
                  <td>@teacherUserSubject.Second.Second.Second.UserName</td>
                  <td>@teacherUserSubject.First.userSurname</td>
                  <td>@teacherUserSubject.First.userName</td>
                  <td>@teacherUserSubject.First.userLastname</td>
                  <td>

                      <ul>
                          @teacherUserSubject.Second.Second.First.subjectName
                      </ul>
                  </td>
               </tr>
            }
    </tbody>
</table>