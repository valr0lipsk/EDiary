@using EDiary.ViewModels
@model TableGroupModel
<div class="col-12">
    <form class="row">
        <div class="col-lg-5 col-md-6 col-sm-7">
            <div class="row mb-3">
                <label for="groupName" class="form-label mb-0">Номер</label>
                <input asp-for="groupName" type="text" class="form-control" id="groupName" required>
            </div>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-7">
            <div class="row mb-3">
                <label for="groupTeacher" class="form-labal" mb-0>Куратор</label>
                <input asp-for="curator" type="text" class="form-control" id="groupTeacher" list="teachers" required />
                <datalist id="teachers">
                    @foreach (var teacher in Model.teachers)
                    {
                        <option value="@teacher.teacherSurname @teacher.teacherName.Substring(0,1). @teacher.teacherLastname.Substring(0,1)."></option>
                    }
                </datalist>
            </div>
        </div>
    </form>
</div>