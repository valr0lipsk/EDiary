@using EDiary.ViewModels
@model UserChangePasswordModel

<h2>Изменение пароля</h2>
<form asp-action="ChangePassword" asp-controller="LogIn">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="oldPassword" class="control-label">Старый пароль</label>
        <input type="password" asp-for="oldPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="newPassword" class="control-label">Новый пароль</label>
        <input type="password" asp-for="newPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>