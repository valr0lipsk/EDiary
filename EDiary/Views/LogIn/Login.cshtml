@model loginViewModel
@{
    Layout = "~/Views/Shared/_logLayout.cshtml";
}
<div class="row h-100 justify-content-center align-items-center min-vh-100">
    <div class="autorizationF col-10 offset-1 flex-column justify-content-center align-self-center">
        <div class="row h-100">
            <div class="welcome__img col-6">
            </div>
            <div class="col-6">
                <div class="row">
                    <form asp-area="" asp-controller="LogIn" asp-action="Login" method="post" asp-route-returnUrl="@ViewBag.returnUrl" class="row h-100 align-content-center justify-content-center ">
                        <div class="row h-100 align-content-center w-100 justify-content-center ">
                            <h1 class="mb-md-5 mb-5">Авторизация</h1>
                            <div id="alertDiv">

                            </div>
                            <div class="d-flex w-100 h-25 flex-column justify-content-center align-items-center">
                                <input asp-for="userName" class="form-control shdw input pl-4 pr-4 col-md-5 col-6 w-100 m-1" id="inputLogin" type="text" placeholder="login" required/><span asp-validation-for="userName"></span>
                                <input asp-for="Password" class="form-control shdw input pl-4 pr-4 col-md-5 col-6 w-100 m-1" id="inputPassword" type="password" placeholder="password" required/><span asp-validation-for="Password"></span>
                                <div class="col flex-row col-md-5 col-7 m-0 ml-3 align-items-center">
                                    <input asp-for="Remember" type="checkbox" value="false"><span asp-validation-for="Remember"></span>
                                    <label style="font-size: 90%">
                                        Запомнить меня
                                    </label>
                                </div>
                            </div>
                            <input type="submit" class="btn col-md-3 mt-1 col-5 h1 button shdw rounded-pill" id="btnLog" style="height: 10%; font-size: 130%" value="Войти" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



