@model ResetPasswordModel
@{
    Layout = "~/Views/Shared/_passLayout.cshtml";
}
<form method="post" class="form-horizontal pt-3">
    <input asp-for="Code" type="hidden" />
    <div class="form-group">
        <label asp-for="userEmail">Введите email</label>
        <input asp-for="userEmail" class="form-control" required />
        <span asp-validation-for="userEmail" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="newPassword">Новый пароль</label>
        <input asp-for="newPassword" class="form-control" required />
        <span asp-validation-for="newPassword" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="confirmPassword">Подтвердите пароль</label>
        <input asp-for="confirmPassword" class="form-control" required />
        <span asp-validation-for="confirmPassword" class="text-danger small"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>