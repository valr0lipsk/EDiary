@model ResetPasswordModel
@{
    Layout = "~/Views/Shared/_passLayout.cshtml";
}
<form class="form-horizontal pt-3" method="post">
    <input asp-for="Code" type="hidden" />
    <div class="form-group">
        <label asp-for="userEmail">Введите email</label>
        <input class="form-control" asp-for="userEmail" required />
        <span class="text-danger small" asp-validation-for="userEmail"></span>
    </div>
    <div class="form-group">
        <label asp-for="newPassword">Новый пароль</label>
        <input class="form-control" asp-for="newPassword" required />
        <span class="small text-danger" asp-validation-for="newPassword"></span>
    </div>
    <div class="form-group">
        <label asp-for="confirmPassword">Подтвердите пароль</label>
        <input class="form-control" asp-for="confirmPassword" required />
        <span class="small text-danger" asp-validation-for="confirmPassword"></span>
    </div>
    <button class="btn btn-primary" type="submit">Сохранить</button>
</form>