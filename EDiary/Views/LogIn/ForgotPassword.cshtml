@model ForgotPasswordModel
@{
    Layout = "~/Views/Shared/_passLayout.cshtml";
}
<form asp-controller="LogIn" asp-action="ForgotPassword" method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="userEmail" class="col-2 control-label p-0">Введите email</label>
        <div class="col-10 p-0">
            <input asp-for="userEmail" class="form-control" required />
            <span asp-validation-for="userEmail" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Отправить</button>
    </div>
</form>