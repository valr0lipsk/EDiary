<form asp-controller="Accounts" asp-action="Admin">
    <div class="container h-100">
        <div class="row h-100">
            <div class="col-12 accountF h-100 p-3">
                <div class="row h-100">
                    <div class="col-3">
                        <dl class="list-group list-group-flush">
                            <dt class="mb-1">Пользователи:</dt>
                            <dd class="list-group-item list-group-item-action cursor">Добавить учащегося</dd>
                            <dd class="list-group-item list-group-item-action cursor">Добавить преподавателя</dd>
                            <dd class="list-group-item list-group-item-action cursor">Все пользователи</dd>
                            <dt class="mt-2 mb-1">Предметы:</dt>
                            <dd class="list-group-item list-group-item-action cursor">Добавить предмет</dd>
                            <dd class="list-group-item list-group-item-action cursor">Все предметы</dd>
                        </dl>
                    </div>
                    <div class="col-9">
                        <form class="row g-3 needs-validation" novalidate>
                            <div class="col-md-4">
                                <label for="validationCustom02" class="form-label mb-0">Фамилия</label>
                                <input type="text" class="form-control" id="validationCustom02" required>
                            </div>
                            <div class="col-md-4">
                                <label for="validationCustom01" class="form-label mt-2 mb-0">Имя</label>
                                <input type="text" class="form-control" id="validationCustom01" required>
                            </div>
                            <div class="col-md-4">
                                <label for="validationCustom03" class="form-label mt-2 mb-0">Отчество</label>
                                <input type="text" class="form-control" id="validationCustom03" required>
                            </div>
                            <div class="col-md-4">
                                <label for="validationCustomUsername" class="form-label mt-2 mb-0">Имя пользователя</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text" id="inputGroupPrepend">tr</span>
                                    <input type="text" class="form-control" id="validationCustomUsername" disabled readonly="readonly" aria-describedby="inputGroupPrepend" required>
                                    <div class="invalid-feedback">
                                        Пожалуйста, выберите имя пользователя.
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="validationCustom04" class="form-label mt-2 mb-0 mr-5">Группа</label>
                                <select class="form-select" id="validationCustom04" required>
                                    <option selected disabled value="">Выберите...</option>
                                    <option>...</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary" type="submit">Сохранить преподавателя</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
